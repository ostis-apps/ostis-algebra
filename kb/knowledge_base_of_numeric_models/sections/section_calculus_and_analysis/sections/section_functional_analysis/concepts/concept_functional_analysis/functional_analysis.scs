concept_functional_analysis <- rrel_key_sc_element:
	...
	(*
	=> nrel_main_idtf: [Опр. (функциональный анализ)] (*<-lang_ru;;*);;
	<-sc_explanation;;
	<= nrel_sc_text_translation:
		...
		(*
		-> rrel_definition:
			[Функциональный анализ — раздел математического анализа, в котором изучаются бесконечномерные топологические векторные пространства и их отображения.](*<-lang_ru;;*);;
		*);;
	*);;

//используемые константы
concept_functional_analysis <= nrel_using_constants:
	{
	concept_mathematical_analysis;
	concept_vector_space
	};;	
	
